<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/ID_LOGIN_USERNAME_EDIT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username_login"/>

    <EditText
        android:id="@+id/ID_LOGIN_PASSWORD_EDIT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nextFocusDown="@+id/ID_LOGIN_SUBMIT_BUTTON"
        android:nextFocusRight="@+id/ID_LOGIN_SUBMIT_BUTTON"
        android:inputType="textPassword"
        android:hint="@string/password_login" />

    <CheckBox
        android:id="@+id/ID_LOGIN_REMEMBER_BOX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rememberme_login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ID_LOGIN_SUBMIT_BUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/submit_login"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ID_LOGIN_REGISTER_BUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/register_login"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>